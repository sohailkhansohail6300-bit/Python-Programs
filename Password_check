# here you can check the password where it is strong or weak

while True:
    check_pass = input('Enter your Password or (q to quit): ')
    
    if check_pass == 'q':
        break

    if len(check_pass) >= 8:
        Isupper = False
        Islower = False
        Isdigit = False

        for i in check_pass:
            if i.isupper():
                Isupper = True
            elif i.islower():
                Islower = True
            elif i.isdigit():
                Isdigit = True

        if Isupper and Islower and Isdigit:
            print(f'Your password is strong: {check_pass}')
        else:
            print('Password must contain uppercase, lowercase, and digit')

    else:
        print(f'Password must be at least 8 characters long: {check_pass}')

